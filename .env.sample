# API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here

# Model Configuration
DEFAULT_MODEL=claude-3-sonnet-20240229
MAX_TOKENS=4096
TEMPERATURE=0.7
RESPONSE_FORMAT=json

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
CACHE_DIR=./App/cache
OUTPUT_DIR=./App/output
FLAGGED_DIR=./App/flagged

# CAD Settings
DEFAULT_UNITS=mm
DEFAULT_TOLERANCE=0.001
MAX_PATTERN_INSTANCES=100
SIMILARITY_THRESHOLD=0.9
MANUFACTURING_PRECISION=0.01

# Pattern Recognition
MIN_PATTERN_CONFIDENCE=0.8
MAX_PATTERN_SEARCH_DEPTH=5
PATTERN_TYPES=["linear", "circular", "symmetric", "repetitive"]

# Manufacturing Analysis
MIN_WALL_THICKNESS=0.8
MAX_OVERHANG_ANGLE=45
SUPPORT_DENSITY=0.3
INFILL_PERCENTAGE=20

# Web Server
HOST=localhost
PORT=8000
WORKERS=4
TIMEOUT=120 